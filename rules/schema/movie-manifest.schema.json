{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://clawtube.ai/schemas/movie-manifest.schema.json",
  "title": "MiniMovieManifest",
  "type": "object",
  "additionalProperties": false,
  "required": ["version", "title", "targetDurationSeconds", "script", "shotlist"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version, e.g. 0.2.0"
    },
    "title": { "type": "string" },
    "logline": { "type": "string" },

    "targetDurationSeconds": { "type": "number", "minimum": 1 },
    "computedDurationSeconds": { "type": "number", "minimum": 0 },

    "aspectRatio": { "type": "string", "enum": ["16:9", "9:16"], "default": "16:9" },
    "fps": { "type": "integer", "minimum": 1, "default": 30 },
    "style": { "type": "string", "description": "Global visual style string" },

    "providers": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "voiceover": { "$ref": "#/$defs/providerRef" },
        "image": { "$ref": "#/$defs/providerRef" },
        "video": { "$ref": "#/$defs/providerRef" },
        "music": { "$ref": "#/$defs/providerRef" },
        "transcription": { "$ref": "#/$defs/providerRef" }
      }
    },

    "characters": {
      "type": "array",
      "items": { "$ref": "#/$defs/character" }
    },

    "script": {
      "type": "object",
      "additionalProperties": false,
      "required": ["lines"],
      "properties": {
        "lines": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/scriptLine" }
        }
      }
    },

    "shotlist": {
      "type": "object",
      "additionalProperties": false,
      "required": ["scenes"],
      "properties": {
        "scenes": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/scene" }
        }
      }
    },

    "render": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "engine": { "type": "string", "enum": ["ffmpeg", "remotion"] },
        "resolution": { "type": "string", "enum": ["720p", "1080p"] }
      }
    },

    "export": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "outputMp4Path": { "type": "string" },
        "captionsSrtPath": { "type": "string" },
        "manifestPath": { "type": "string" }
      }
    }
  },

  "$defs": {
    "providerRef": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name"],
      "properties": {
        "name": { "type": "string", "description": "Provider identifier (fal, elevenlabs, etc.)" },
        "model": { "type": "string", "description": "Model id/name, provider-specific" },
        "notes": { "type": "string" }
      }
    },

    "character": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name"],
      "properties": {
        "name": { "type": "string" },
        "role": { "type": "string" },
        "description": { "type": "string" },
        "visual": { "type": "string" },
        "referenceImages": {
          "type": "array",
          "items": { "type": "string", "description": "Local path or URL" }
        }
      }
    },

    "scriptLine": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "kind", "text"],
      "properties": {
        "id": { "type": "string", "pattern": "^L\\d{3}$" },
        "kind": {
          "type": "string",
          "enum": ["dialogue", "voiceover", "silent", "action", "onscreen"]
        },
        "speaker": { "type": "string" },
        "text": { "type": "string" },
        "timing": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "startSeconds": { "type": "number", "minimum": 0 },
            "endSeconds": { "type": "number", "minimum": 0 },
            "durationSeconds": { "type": "number", "minimum": 0 }
          }
        }
      },
      "allOf": [
        {
          "if": { "properties": { "kind": { "enum": ["dialogue", "voiceover"] } } },
          "then": { "required": ["speaker"] }
        }
      ]
    },

    "scene": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "shots"],
      "properties": {
        "id": { "type": "string", "pattern": "^S\\d{2}$" },
        "location": { "type": "string" },
        "timeOfDay": { "type": "string" },
        "characters": { "type": "array", "items": { "type": "string" } },

        "lineRefs": {
          "type": "array",
          "items": { "type": "string", "pattern": "^L\\d{3}$" }
        },

        "plannedDurationSeconds": { "type": "number", "minimum": 0 },

        "shots": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/shot" }
        }
      }
    },

    "shot": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "shotType", "visual", "plannedDurationSeconds", "imagePrompt", "videoPrompt"],
      "properties": {
        "id": { "type": "string", "pattern": "^SH\\d{2}$" },
        "shotType": { "type": "string", "enum": ["WS", "MS", "CU", "ECU", "OTS", "POV", "INSERT"] },

        "lineRefs": {
          "type": "array",
          "items": { "type": "string", "pattern": "^L\\d{3}$" }
        },

        "visual": { "type": "string" },
        "motion": { "type": "string" },

        "plannedDurationSeconds": { "type": "number", "minimum": 0.1 },

        "generateDurationSeconds": {
          "type": "number",
          "minimum": 0.1,
          "description": "Duration to request from the generation model (may be clamped to model constraints)."
        },

        "trim": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "startSeconds": { "type": "number", "minimum": 0, "default": 0 },
            "durationSeconds": { "type": "number", "minimum": 0.1 }
          }
        },

        "imagePrompt": { "type": "string" },
        "videoPrompt": { "type": "string" },

        "assets": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "imagePath": { "type": "string" },
            "videoPath": { "type": "string" },
            "voicePath": { "type": "string" }
          }
        }
      }
    }
  }
}
